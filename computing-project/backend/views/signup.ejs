<div class="min-h-screen bg-[#0B0B0B] flex flex-col justify-center items-center px-6">
    <div class="text-center">
      <img src="images/scissors-icon.png" alt="Scissors Icon" class="mx-auto mb-4" />
      <h2 class="text-4xl text-white font-bold mb-8">Sign Up</h2>
      <form action="/register" method="post" class="w-full max-w-xs">
        <input type="text" name="fullname" placeholder="Full Name" class="w-full mb-4 px-4 py-2 rounded bg-gray-800 text-white" required>
        <input type="email" name="email" placeholder="Email Address" class="w-full mb-4 px-4 py-2 rounded bg-gray-800 text-white" required>
        <input type="password" name="password" placeholder="Password" class="w-full mb-4 px-4 py-2 rounded bg-gray-800 text-white" required>
        <input type="password" name="confirmPassword" placeholder="Confirm Password" class="w-full mb-4 px-4 py-2 rounded bg-gray-800 text-white" required>
        <div class="text-gray-400 text-xs mb-4">By signing up, you agree to our <a href="#" class="text-blue-500">Privacy Policy</a> &amp; <a href="#" class="text-blue-500">Terms of Service</a></div>
        <button type="submit" class="w-full mb-4 bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded">Sign Up</button>
      </form>
      <div class="text-gray-400 my-4">or</div>
      <a href="/login" class="text-blue-500 hover:text-blue-700">Sign In</a>
    </div>
  </div>
  